{
	"name": "prismatia",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"fmt": "oxfmt",
		"fmt:check": "oxfmt --check",
		"lint": "eslint .",
		"lint:styles": "stylelint \"**/*.{css,ts,html}\" --aei --fix",
		"prepare": "npx simple-git-hooks",
		"preview": "vite preview"
	},
	"dependencies": {
		"@nanostores/persistent": "1.3.3",
		"colorjs.io": "0.6.1",
		"nanostores": "1.1.0"
	},
	"devDependencies": {
		"@zazen/eslint-config": "7.4.1",
		"@zazen/stylelint-config": "5.1.1",
		"eslint": "9.39.2",
		"globals": "17.3.0",
		"lint-staged": "16.2.7",
		"oxfmt": "0.33.0",
		"postcss-html": "1.8.1",
		"postcss-lit": "1.3.1",
		"simple-git-hooks": "2.13.1",
		"stylelint": "17.3.0",
		"typescript": "5.9.3",
		"vite": "7.3.1"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"*.{js,ts}": "eslint --fix",
		"*.{ts,css,html}": "stylelint --fix --aei",
		"*": "oxfmt --no-error-on-unmatched-pattern"
	}
}
